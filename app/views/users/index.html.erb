<% provide(:title, "Campus Churches") %>


 <div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                      
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>Campus Church</span></th>
                              
                                 <th><span>Group</span></th>
                                <th><span>Region</span></th>
                                <th><span>AVG Sun Att</span></th>
                                 <th><span>Email</span></th>
                                <th class="text-center"><span>Data Status</span></th>
                                <th> &nbsp; </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @users.each do |t| %>
                               
                                <tr>
                                    <td>
                                        <%= gravatar_for t %>
                                        <%= link_to t.name, t, class: "user-link" %>
                                        <span class="user-subhead"><%= t.elder%></span>
                                    </td>
                                    <td><%= link_to t.church_group.name, church_group_path(t.church_group), class: "table-text"%></td>
                                    <td class="table-text"><%= t.church_group.region %></td>
                                    <td class="table-text text-center"><strong><%= t.ytd_avg_sun %></strong></td>
                                    <td><%= link_to "#{t.elder}", "mailto:#{t.email}" %></td>
                                    <td class="text-center">
                                         <% csclass= t.records.count < Date.today.cweek ? "label label-danger" : "label label-success" %>
                                        <span class="<%="#{csclass}"%>"><%= t.missing_data%></span>
                                    </td>
                                  
                                    <td>
                                        <%= link_to user_path(t), class: "table-link success" do %>
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                            </span>
                                       <% end %>
                                        <%= link_to edit_user_path(t), class: "table-link" do %>
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        <% end %>
                                      
                                            <span class="fa-stack">
                                                
                                                <%= link_to url_for(action: :destroy, id: t.id),method: :delete, data: { confirm: 'Are you sure you want to delete this Church and all thier records?' }, class: "table-link danger", remote: true do %>
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span>
                                        <% end %>
                                    </td>
                                </tr>
                               <% end %>
                            </tbody>
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%= will_paginate @user, renderer: BootstrapPagination::Rails%>
</div>
  




