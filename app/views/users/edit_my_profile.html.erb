
<% provide(:title, 'Edit My Profile') %>

 <div class="container">    
        <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-warning" >
                    <div class="panel-heading">
                        <div class="panel-title">Update My Information</div>
                      </div>
                      <div style="padding-top:30px" class="panel-body" >

<%= bootstrap_form_for @user, url: { action: 'update_my_profile' } do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <% if @user.avatar? %>
    <%= image_tag @user.avatar.thumb.url, :class=>"profilePhoto" %>
  <% end %>
  <div class="photoPreview">
    <i class="fa fa-upload photoUpload"></i>
    <p id="uploadClick">Click to Upload Profile Picture</p>
  </div>
<%= f.file_field :avatar, hide_label: true, accept: 'image/png,image/gif,image/jpeg, image/jpg', id: 'uploadAvatar', style: 'display: none;' %>
<p class="deletePhoto">Delete</p>
<%= f.text_field :name, icon: "pencil", label: "Full name:" %>
<%= f.email_field :email, icon: "folder-open", label: "Email Address:" %>
<%= f.password_field :password, icon: "user", label: "New Password:" %>
<%= f.password_field :password_confirmation, icon: "user", label: "Confirm New Password:" %>
  <%= f.submit "Submit Amendment", data: { confirm: 'Are You Sure You Want To Submit?' }, class: "btn btn-primary" %>
<% end %>
    </div>
  </div>
  </div>
  </div>

