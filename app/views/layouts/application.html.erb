<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> |FLC UK Pastoral Care</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if logged_in? && current_user.admin == true %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
         <%= link_to "FLC Pastoral Care", demo_path, class: "navbar-brand active"%>
         
      
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="acti" ><%= link_to "Church Groups", church_groups_path, class: "active"%> <span class="sr-only">(current)</span></li>
         <li class="aive" ><%= link_to "Latest Data", "#", class: "active" %><span class="sr-only">(current)</span></li>
        <li class="tive"><%= link_to "Campus Churches", users_path, class: "active" %><span class="sr-only">(current)</span></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Options <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Create New Church Group</a></li>
            <li><a href="#">Create New Campus Church</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Edit Church Group Information</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Edit Campus Church Inofrmation</a></li>
          </ul>
        </li>
      </ul>

<%= form_tag(users_path, method: 'get', class: 'navbar-form navbar-left') do %>
  <%= search_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search By Campus or Elder'  %>
  <%= submit_tag "Submit", class: 'btn btn-default', :name => nil %>
<% end %>
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to logout_path, :method => 'delete', data: {confirm: "Are you sure you want to Logout?"}, remote: false do%>
        Log Out</li>
      <% end %>
       
      </ul>
     </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% elsif logged_in? && current_user.admin == false  %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <%= link_to "FLC Pastoral Care", demo_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "View Records", records_path %> <span class="sr-only">(current)</span></li>
         <li><%= link_to "New Data Record", new_record_path %><span class="sr-only">(current)</span></li>
   </ul>
    <ul class="nav navbar-nav navbar-right">
          <li><%= link_to logout_path, :method => 'delete', data: {confirm: "Are you sure you want to Logout?"}, remote: false do%>
         <span class="glyphicon glyphicon-log-out"></span>&nbsp;Log out</li>
      <% end %>
       
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% else %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <%= link_to "FLC Pastoral Care", login_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

     
     
      <ul class="nav navbar-nav navbar-right">
          <li><%= link_to login_path do%>
         <span class="glyphicon glyphicon-log-in"></span>&nbsp;Login To Access The System</li>
      <% end %>
       
      </ul>
     </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% end %>

<% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
<%= yield %>


  <footer>
   

      
   <table class="table table-striped">
                            <thead>
                                <tr>
                                <td><span class="glyphicon glyphicon-flag"></span>&nbsp;<span><%= link_to "Email For Tech Support", "mailto:firstlovechurchuk@gmail.com" %></span></td>
                              
                               
                                <th> &nbsp; </th>
                                </tr>
                            </thead>     
     
      
</table>
  </footer>
</body>

 

  
  
  



</html>
