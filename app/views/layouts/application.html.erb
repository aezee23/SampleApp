<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> |FLC UK Pastoral Care</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if logged_in? && current_user.admin == true %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <%= link_to "FLC Pastoral Care", demo_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "View Church Groups", church_groups_path, class: "active"%> <span class="sr-only">(current)</span></li>
        <li class="active"><%= link_to "View Campus Churches", users_path, class: "active" %><span class="sr-only">(current)</span></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Options <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#">Create New Church Group</a></li>
            <li><a href="#">Create New Campus Church</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Edit Church Group Information</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Edit Campus Church Inofrmation</a></li>
          </ul>
        </li>
      </ul>

<%= form_tag(users_path, method: 'get', class: 'navbar-form navbar-left') do %>
  <%= search_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search By Campus or Elder'  %>
  <%= submit_tag "Submit", class: 'btn btn-default', :name => nil %>
<% end %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Log Out", logout_path, :method => 'delete', data: {confirm: "Are you sure you want to Logout?"}, class: "nav navbar-nav navbar-right" %></li>
       
      </ul>
     </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% elsif logged_in? && current_user.admin == false  %>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
     <%= link_to "FLC Pastoral Care", demo_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><%= link_to "View Records", records_path %> <span class="sr-only">(current)</span></li>
         <li class="active"><%= link_to "New Data Record", new_record_path %><span class="sr-only">(current)</span></li>
   </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Log Out", logout_path, :method => 'delete', data: {confirm: "Are you sure you want to Logout?"} %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% else %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "FLC Pastoral Care", login_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
 
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Login To Access System", login_path%></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<% end %>

<% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
<%= yield %>


  <footer>
     <div class="container">
      <div class="row">
  <div class="col-md-8">

      
        
        <%= link_to "Contact Technical Support", "mailto:firstlovechurchuk@gmail.com", class: "text-muted text" %>
      
  </div>
  
 
       
     
</div>
</div>
  </footer>
</body>

 

  
  
  



</html>
