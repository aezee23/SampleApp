  <%= bootstrap_form_for(@record) do |f| %>

  <%= f.date_field :day, icon: "calendar", value: @date, label: "Date of Sunday Service", help: "Click dropdown arrow to select" %>
  <%= f.hidden_field :sunday_att, icon: "globe", value: 0, label: "Sunday Attendance:" %>
  <%= f.hidden_field :weekday_att, icon: "book", value: 0, label: "Weekday Attendance:", help: "For meeting a few days prior to the Sunday above" %>
  <%= f.hidden_field :new_converts, icon: "tree-deciduous", value: 0, label: "Number of New Converts in Sunday service:" %>
  <%= f.hidden_field :first_timers, icon: "user", value: 0, label: "Number of First Timers in Sunday service:" %>
  <%= f.hidden_field :nbs, icon: "home", value: 0, label: "How many people STARTED New Believers School this Sunday?" %>
  <%= f.hidden_field :nbs_finish, icon: "education",  value: 0, label: "How many people FINISHED New Believers School this Sunday?" %>
   <%= f.hidden_field :fnb, icon: "briefcase", value: 0, label: "Number of people who gave their First and Best this Sunday:" %>
  <%= f.select :visitation, [["No", false], ["Yes", true]], { icon: "check", label: "Did you go on visitation in the past week?" }, { class: "selectpicker" }  %>
  <%= f.hidden_field :message_sunday, icon: "grain", label: "Sunday Message Title:", value: "None" %>
  <%= f.hidden_field :preacher_sunday, icon: "fire", label: "Who Preached in Sunday Service?", value: current_user.admin ? "None": "#{current_user.elder}"%>
  <%= f.hidden_field :message_weekday, icon: "grain", label: "Weekday Message Title:" , value: "None" %>
  <%= f.hidden_field :preacher_weekday, icon: "fire", label: "Who Preached in Weekday Service?", value: current_user.admin ? "None": "#{current_user.elder}" %>
  <%= f.submit "Submit Data", data: { confirm: 'Are You Sure You Want To Submit?' }, class: "btn btn-primary" %>

  <% end %>