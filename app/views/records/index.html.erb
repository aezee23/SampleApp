<% provide(:title, 'Data Records') %>

<div class="container">
<h1 style="padding-left: 0px"><span class="label label-default">All Records</span></h1>
<% if current_user.admin %>
<p>
  Data Download:
  <%= link_to "To Excel", records_path(format: "csv") %> |
</p>
<% end %>
<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
   
   <%= form_tag records_path, :method => 'get', :id => "records_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="records"><%= render 'records' %></div>
<% end %>
</div>
                