<% provide(:title, "#{@record.day} Data - #{@record.church.name}") %>

<div class="container">
  <div class="section_heading" >
    <h3 > 
      <span class="label label-primary"><%= link_to @record.church.name, church_path(@record.church), class: "label label-primary" %><%= "      "+@record.day.strftime('%d-%b-%y') %></span>
      </h3>
  </div>

		

<dl class="dl-horizontal">
  <dt> Sunday Attendance</dt>
  <dd><%= @record.sunday_att %></dd>
    <dt> Weekday Attendance</dt>
  <dd><%= @record.weekday_att %></dd>
    <dt> First Timers </dt>
  <dd><%= @record.first_timers %></dd>
    <dt> New Converts</dt>
  <dd><%= @record.new_converts %></dd>
    <dt> First and Best</dt>
  <dd><%= @record.fnb %></dd>
    <dt> Start NBS</dt>
  <dd><%= @record.nbs %></dd>
    <dt> Finish NBS</dt>
  <dd><%= @record.nbs_finish %></dd>
    <dt> Sunday Message</dt>
  <dd><%= @record.message_sunday %></dd>
   <dt> Sunday Preacher</dt>
  <dd><%= @record.preacher_sunday %></dd>
   <dt> Weekday Message</dt>
  <dd><%= @record.message_weekday %></dd>
   <dt> Weekday Preacher</dt>
  <dd><%= @record.preacher_weekday %></dd>
   <dt> Data entered by:</dt>
  <dd><%= @record.user ? @record.user.name : "User deleted" %></dd>
   <% if current_user.admin %>
   <dt> 
<br>
<%= link_to edit_record_path(@record), class: "btn btn-default", remote: false do %>
<i class="fa fa-cog"></i>Edit</a>
<% end %>
   </dt>
  <dd><br><%= link_to url_for(@record),method: :delete, data: { confirm: 'Are you sure you want to delete this record?' }, class: "btn btn-danger", remote: false do %>
  <i class="fa fa-trash-o fa-lg"></i> Delete</a>
  <% end %></dd>

  <% end %>
</dl>
</div>



