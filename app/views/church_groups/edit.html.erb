
<% provide(:title, 'Edit Church Group Information') %>
<h1 style="padding-left: 0px"><span class="label label-default" style="padding-left:20px">Edit Church Group</span></h1>

<div class="row" style="padding: 40px">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@church_group) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :leader, "Overseer" %>
      <%= f.text_field :leader, class: 'form-control' %>
      
      <%= f.label :region %>
      <%= f.text_field :region, placeholder: "London/Judea", class: 'form-control' %>
      
      <br>
      <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>
    
  </div>
</div>
