<div class="table-responsive members_table">
  <table class="table">
    <thead>
      <tr>
        <th><span>Name</span></th>
        <% if current_user.admin %>
          <th><span>Pastor</span></th>
        <% end %>
        <th><span>Church</span></th>
        <th><span>Email</span></th>
        <th><span>Visited</span></th>               
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td>
            <%= image_tag member.small_thumbnail, alt: member.name %>
            <%= link_to member.name, edit_member_path(member), class: "user-link" %>
          </td>
          <% if current_user.admin %>
            <td><span><%= member.pastor.name %></span></td>
          <% end %>
          <td><span><%= member.church.name %></span></td>
          <td><span><%= member.email %></span></td>
          <td><span><%= member.visited ? "Yes" : "No" %></span></td>
          <td>
            <%= link_to edit_member_path(member), class: "table-link" do %>
                <span class="fa-stack">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                </span>
            <% end %>
            <%= link_to member, method: :delete, data: { confirm: 'Are you sure you want to delete this Member?' }, class: "table-link danger", remote: false do %>
              <span class="fa-stack">
                <i class="fa fa-square fa-stack-2x"></i>
                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
              </span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>